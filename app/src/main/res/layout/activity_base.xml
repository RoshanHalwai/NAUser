<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nmLightBlack"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context=".BaseActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.05"
        android:contentDescription="@string/back_button_description"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_left_na" />

    <TextView
        android:id="@+id/textActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.85"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/historyButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.05"
        android:contentDescription="@string/history_button_description"
        android:src="@drawable/history_na"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.05"
        android:contentDescription="@string/information_about_the_current_screen"
        android:src="@drawable/info_icon_na"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logoutButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.05"
        android:contentDescription="@string/information_about_the_current_screen"
        android:src="@drawable/logout_na"
        android:visibility="gone" />

</LinearLayout>