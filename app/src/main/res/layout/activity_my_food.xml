<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/activity_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.1"
                        android:drawableTop="@drawable/request_accepted_na"
                        android:gravity="center"
                        android:text="@string/enter_food_type"
                        android:textColor="@color/nmBlack"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.9"
                        android:background="@drawable/dash_line"
                        android:layerType="software" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/request_accepted_na"
                        android:gravity="center"
                        android:text="@string/select_food_qty"
                        android:textColor="@color/nmBlack"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.9"
                        android:background="@drawable/dash_line"
                        android:layerType="software" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.1"
                        android:drawableTop="@drawable/request_accepted_na"
                        android:gravity="center"
                        android:text="@string/request_service"
                        android:textColor="@color/nmBlack"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.9"
                        android:background="@drawable/dash_line"
                        android:layerType="software" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.1"
                        android:drawableTop="@drawable/request_accepted_na"
                        android:gravity="center"
                        android:text="@string/team_collect_food"
                        android:textColor="@color/nmBlack"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textFoodType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/food_type"
                        android:textColor="@color/nmBlack"
                        android:textSize="@dimen/text_view_default_size" />

                    <EditText
                        android:id="@+id/editFoodType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/food_type_hint"
                        android:inputType="textCapSentences"
                        android:textColor="@color/nmBlack"
                        android:textSize="@dimen/edit_text_default_size" />

                    <TextView
                        android:id="@+id/textFoodQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/food_quantity"
                        android:textColor="@color/nmBlack"
                        android:textSize="@dimen/text_view_default_size" />

                    <LinearLayout
                        android:id="@+id/layoutFoodQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/buttonFoodQtyLess"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/valid_for_button_design"
                            android:text="@string/less"
                            android:textAllCaps="false"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/buttonFoodQtyMore"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/valid_for_button_design"
                            android:text="@string/more"
                            android:textAllCaps="false"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textErrorFoodQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/valid_button"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/buttonDonateFood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/button_margin"
                        android:background="@color/nmBlack"
                        android:text="@string/collect_food"
                        android:textAllCaps="true"
                        android:textColor="@color/nmLightYellow"
                        android:textSize="@dimen/button_default_size" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>