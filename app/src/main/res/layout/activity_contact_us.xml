<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".navigationdrawer.help.activities.ContactUs">

    <include layout="@layout/activity_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textServiceCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/select_service_category"
                    android:textColor="@color/nmBlack"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/buttonSocietyServices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/selected_button_design"
                        android:padding="5dp"
                        android:text="@string/society_service"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/buttonApartmentService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/valid_for_button_design"
                        android:padding="5dp"
                        android:text="@string/apartment_service"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textServiceType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/service_type"
                    android:textColor="@color/nmBlack"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editServiceType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:cursorVisible="false"
                    android:hint="@string/choose_one_hint"
                    android:inputType="text"
                    android:textColor="@color/nmBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textProblemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/describe_your_problem"
                    android:textColor="@color/nmBlack"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editProblemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_guest_not_selected"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLength="180"
                    android:padding="5dp"
                    android:textColor="@color/nmBlack"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/textErrorProblemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/enter_problem_description"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/nmBlack"
                    android:text="@string/submit_request"
                    android:textAllCaps="false"
                    android:textColor="@color/nmLightYellow"
                    android:textSize="@dimen/button_default_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>