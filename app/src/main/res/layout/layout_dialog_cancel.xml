<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textCancelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/remove_guest_message"
        android:textColor="@color/nmBlack"
        android:textSize="@dimen/text_view_default_size" />

    <TextView
        android:id="@+id/textCancelDailyServicesDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/daily_service_cancel"
        android:textColor="@color/nmBlack"
        android:textSize="@dimen/text_view_default_size"
        android:visibility="gone" />
</LinearLayout>