<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageNammaApartments"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/image_which_shows_app_icon" />

    <TextView
        android:id="@+id/textRateDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/rate_us_dialog_title"
        android:textColor="@color/nmBlack"
        android:textSize="@dimen/text_view_default_size" />

    <TextView
        android:id="@+id/textRateDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/rate_us_dialog_message"
        android:textColor="@color/nmBlack"
        android:textSize="@dimen/text_view_default_size" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:numStars="5"
        android:progressTint="@color/nmLightYellow"
        android:rating="5"
        android:stepSize="1"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRemindLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/nmBlack"
            android:text="@string/remind_later"
            android:textAllCaps="false"
            android:textColor="@color/nmLightYellow"
            android:textSize="@dimen/button_default_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonRateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/nmBlack"
            android:text="@string/rate_now"
            android:textAllCaps="false"
            android:textColor="@color/nmLightYellow"
            android:textSize="@dimen/button_default_size"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>