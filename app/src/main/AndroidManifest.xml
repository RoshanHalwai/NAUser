            android:name=".services.societyservices.othersocietyservices.activities.SocietyServiceProblemList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.othersocietyservices.activities.EventManagement"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <!-- Apartment Services Screen -->
        <activity
            android:name=".services.apartmentservices.activities.ApartmentServices"
            android:screenOrientation="portrait" />
