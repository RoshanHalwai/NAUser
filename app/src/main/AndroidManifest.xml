<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kirtanlabs.nammaapartments">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NammaApartmentsTheme">

        <!-- Ignore these activities for now -->
        <activity android:name=".MainActivity" />
        <activity android:name=".onboarding.flatdetails.MyFlatDetails" />
        <activity
            android:name=".onboarding.login.SignUp"
            android:windowSoftInputMode="adjustResize" />

        <!-- Notification Services -->
        <service android:name=".nammaapartmentsservices.digitalgate.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".nammaapartmentsservices.digitalgate.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Splash Screens -->
        <activity
            android:name=".onboarding.splashscreen.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/NammaApartmentsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Screens -->
        <activity
            android:name=".onboarding.login.SignIn"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".onboarding.login.OTP"
            android:windowSoftInputMode="adjustResize" />

        <!-- Namma Apartments NammaApartmentsHome Screen -->
        <activity android:name=".nammaapartmentshome.NammaApartmentsHome" />

        <!-- Digital Gate Screens -->
        <activity android:name=".nammaapartmentsservices.digitalgate.digitalgatehome.DigitalGateHome" />
        <activity
            android:name=".nammaapartmentsservices.digitalgate.invitevisitors.InvitingVisitors"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".nammaapartmentsservices.digitalgate.myvisitorslist.VisitorsList" />
        <activity android:name=".nammaapartmentsservices.digitalgate.notifydigitalgate.NotifyGateAndEmergencyHome" />
        <activity
            android:name=".nammaapartmentsservices.digitalgate.notifydigitalgate.ExpectingArrival"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".nammaapartmentsservices.digitalgate.notifydigitalgate.HandedThings" />
        <activity android:name=".nammaapartmentsservices.digitalgate.mydailyservices.DailyServicesHome" />
        <activity android:name=".nammaapartmentsservices.digitalgate.mydailyservices.AddDailyServiceAndFamilyMembers" />
        <activity android:name=".nammaapartmentsservices.digitalgate.emergency.RaiseAlarm" />
        <activity android:name=".nammaapartmentsservices.digitalgate.mysweethome.MySweetHome" />

    </application>

</manifest>