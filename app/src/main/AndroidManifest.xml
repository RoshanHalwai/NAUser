            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.digigate.myvisitorslist.VisitorsList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.digigate.myvisitorslist.cabs.CabsList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.digigate.myvisitorslist.packages.PackagesList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.digigate.notifydigitalgate.handedthings.history.HandedThingsHistory"
            android:screenOrientation="portrait" />

        <!-- Society Services Screen -->
        <activity
            android:name=".services.societyservices.othersocietyservices.activities.SocietyServicesHome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.othersocietyservices.activities.AwaitingResponse"
            android:screenOrientation="portrait" />
        <activity
            android:name=".services.societyservices.othersocietyservices.activities.SocietyServicesHistory"
            android:screenOrientation="portrait" />
